.Overlay
	width 100%
	height 100%
	position absolute
	top -100%
	overflow hidden
	left 0
	background-color rgba(#262626,.8)
	transition top .4s ease-in

.showOverlay
	top 0

.OverlayImage
	position absolute
	top 3em
	left 3em
	bottom 3em
	right 3em
	background-repeat no-repeat
	background-size contain
	background-position center


.close,.next,.previous
	position absolute
	width 1em
	height 1em
	font-size 2em
	color #fdfdfd
	text-shadow 1px 1px 6px rgba(0,0,0,1)
	cursor pointer

.close
	top .3em
	right .3em
	&:before
		content '✖'

.next,.previous
	bottom 3em

.next
	right .3em
	&:before
		content '▶'

.previous
	left .3em
	&:before
		content '◀'
