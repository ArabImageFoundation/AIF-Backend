.LayoutColumnItem
	width 100%
	-webkit-touch-callout none
	-webkit-user-select none
	-khtml-user-select none
	-moz-user-select none
	-ms-user-select none
	user-select none
	background #494949
	padding .2em 0 .2em 0
	color #ddd
	&:before
		content '○'
		margin-right .2em
		margin-left .1em
		color #898686
	&:nth-child(odd)
		background #404040
	&.selected
		background #0084FF
	&.marked:before
		content '●'
		color #0084FF
	&.selected.marked:before
		color #ddd
	
	